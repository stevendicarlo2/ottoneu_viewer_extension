{
  "manifest_version": 3,
  "name": "Ottoneu Game Formatter",
  "version": "1.0.0",
  "description": "Enhanced visual formatting for Ottoneu fantasy football game pages",
  "permissions": [],
  "host_permissions": [
    "https://ottoneu.fangraphs.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://ottoneu.fangraphs.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/football_icon.png",
    "32": "icons/football_icon.png",
    "48": "icons/football_icon.png",
    "128": "icons/football_icon.png"
  }
}